{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "verik.schema.vkproject",
  "type": "object",
  "properties": {
    "project": {
      "type": "string"
    },
    "buildDir": {
      "type": "string"
    },
    "gradleDir": {
      "type": "string"
    },
    "src": {
      "type": "object",
      "properties": {
        "root": {
          "type": "string"
        },
        "pkgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "compile": {
      "type": "object",
      "properties": {
        "top": {
          "type": "string"
        },
        "scope": {
          "type": "string",
          "enum": ["top", "all"]
        },
        "labelLines": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "rconf": {
      "type": "object",
      "properties": {
        "main": {
          "type": "string"
        },
        "jar": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["project"],
  "additionalProperties": false
}