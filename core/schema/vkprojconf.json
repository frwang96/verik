{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "io.verik.schema.vkconfig",
  "type": "object",
  "properties": {
    "project": {
      "type": "string"
    },
    "buildDir": {
      "type": "string"
    },
    "labelLineNumbers": {
      "type": "boolean"
    },
    "vivado": {
      "type": "object",
      "properties": {
        "part": {
          "type": "string"
        },
        "constraints": {
          "type": "string"
        }
      },
      "required": ["part"],
      "additionalProperties": false
    },
    "src": {
      "type": "string"
    }
  },
  "required": ["project", "vivado", "src"],
  "additionalProperties": false
}