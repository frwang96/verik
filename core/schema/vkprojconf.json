{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "io.verik.schema.vkprojconf",
  "type": "object",
  "properties": {
    "project": {
      "type": "string"
    },
    "buildDir": {
      "type": "string"
    },
    "srcRoot": {
      "type": "string"
    },
    "srcPkgs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "top": {
      "type": "string"
    },
    "labelLines": {
      "type": "boolean"
    },
    "gradle": {
      "type": "object",
      "properties": {
        "wrapper": {
          "type": "string"
        },
        "jar": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "stubsMain": {
      "type": "string"
    }
  },
  "required": ["project"],
  "additionalProperties": false
}